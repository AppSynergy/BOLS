{
  "name": "BOLS Finite",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Removes infinite reading.",
  "permissions": ["tabs", "*://*.belloflostsouls.net/*"],
  "content_scripts": [
    {
      "matches": ["*://*.belloflostsouls.net/*"],
      "js": ["finite.js"],
	  "run_at": "document_end"
    }
  ]
}
